{
  "name": "nginx-proxy-manager-switcher",
  "version": "1.0.0",
  "description": "Extended app for Nginx Proxy Manager to automatically switch proxy hosts based on health checks",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:config": "node src/index.js --config",
    "dev": "nodemon src/index.js",
    "dev:config": "nodemon src/index.js --config",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "format:all": "prettier --write .",
    "format:check:all": "prettier --check .",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "nginx",
    "proxy",
    "health-check",
    "failover"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  }
}
